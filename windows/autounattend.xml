                            <Label>Windows</Label>
                            <Format>NTFS</Format>
                        </ModifyPartition>
                        <ModifyPartition wcm:action="add">
                            <Format>NTFS</Format>
                            <Label>Ubuntu</Label>
                            <Letter>D</Letter>
